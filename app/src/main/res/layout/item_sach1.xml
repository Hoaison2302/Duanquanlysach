<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <RelativeLayout
       android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_width="160dp"
        android:layout_height="match_parent">

      <ImageView
          android:layout_marginTop="8dp"
          android:layout_marginRight="8dp"
          android:scaleType="centerCrop"
          android:id="@+id/img_book1"
          android:layout_width="wrap_content"
          android:layout_height="120dp"
          android:src="@drawable/ic_theloaisach" />

      <TextView
          android:maxLines="1"
          android:scrollHorizontally="true"
          android:ellipsize="end"
          android:gravity="center"
          android:layout_margin="4dp"
          android:textSize="13sp"
          android:textStyle="bold"
          android:layout_below="@+id/img_book1"
          android:id="@+id/tv_tensach1"
          android:text="lập trình java 1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="2dp"
          android:layout_below="@+id/tv_tensach1"
          android:text="mã sách:"
          android:id="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="2dp"
          android:layout_toRightOf="@+id/tv_title"
          android:layout_below="@+id/tv_tensach1"
          android:text="MS001"
          android:id="@+id/tv_masach1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="2dp"
          android:layout_below="@+id/tv_title"
          android:text="số lượng:"
          android:id="@+id/tv_title_sl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="2dp"
          android:layout_toRightOf="@+id/tv_title"
          android:layout_below="@+id/tv_masach1"
          android:text="100"
          android:id="@+id/tv_soluong1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="2dp"
          android:id="@+id/tv_title_gia"
          android:text="Gía bìa:"
          android:layout_below="@+id/tv_title_sl"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/tv_giabiasach"
          android:layout_margin="2dp"
          android:layout_toRightOf="@+id/tv_title_gia"
          android:layout_below="@id/tv_soluong1"
          android:text="120000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <ImageView
          android:layout_alignParentRight="true"
          android:id="@+id/img_delete_book"
          android:layout_marginTop="170dp"
          android:src="@drawable/ic_delete"
          android:layout_width="24dp"
          android:layout_height="24dp"/>
      <ImageView
          android:layout_alignParentRight="true"
          android:id="@+id/img_edit_book"
          android:layout_marginTop="190dp"
          android:src="@drawable/pen"
          android:layout_width="16dp"
          android:layout_height="24dp"/>
    </RelativeLayout>

  </androidx.cardview.widget.CardView>


</LinearLayout>

